<div class="left-pan">
   <label id="label-nav-checkbox" for="nav-checkbox"><i class="fa fa-bars" aria-hidden="true"></i></label>
   <input type="checkbox" id="nav-checkbox"/>
   <ul class="nav">
      <li class="element">
         <%= image_tag "profile.png", class:"pp" %>
         <p class="nav-title">Marin Procureur</p>
         <p class="nav-subtitle">Developer & Guitar lover</p>
      </li>
      <li class="element">
         <%= form_tag "/blog", method: :get do %>
            <label for="search"><i class="fa fa-search"></i></label>
            <%= text_field_tag :search, params[:search], placeholder:"Search", id:"search" %>
            <% end %>
         </form>
      </li>
      <li class="element">
         <%= link_to "Home", root_url %>
      </li>
      <li class="element">
         <%= link_to "About Me", "/aboutme" %>
      </li>
      <li class="element">
         <%= link_to "Blog", "/blog" %>
      </li>
      <li class="element">
         <%= link_to "All posts", "/allposts" %>
      </li>
      <% if logged_in? %>
      <li class="element">
         <%= button_to "Log out", { :controller => :session, :action => :destroy }, method: :delete %>
      </li>
      <% end %>
   </ul>
</div>